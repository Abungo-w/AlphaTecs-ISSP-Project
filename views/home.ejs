<!-- Hero Section -->
<section class="hero-section">
    <h1 class="welcome-message">Welcome <%- user.name %></h1>
    <!-- Removed the "Your cybersecurity-learning platform" text -->
</section>

<!-- All Learning Modules Section -->
<section class="all-modules">
    <div class="module-header">
        <h2>All Learning Modules</h2>
        <p>Browse through our complete collection of learning modules</p>
    </div>
    
    <div class="module-grid">
        <% if (modules && modules.length > 0) { %>
            <% modules.forEach(module => { %>
                <div class="module-card">
                    <div class="module-content">
                        <h3><%= module.title %></h3>
                        <p><%= module.description %></p>
                        <div class="module-meta">
                            <span><i class="fas fa-signal"></i> <%= module.difficulty %></span>
                            <span><i class="far fa-clock"></i> <%= module.duration %> mins</span>
                        </div>
                        <button class="start-btn" onclick="startModule('<%= module.id %>')">Start Learning</button>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p class="no-modules">No modules available at the moment.</p>
        <% } %>
    </div>
</section>

<!-- Featured Learning Modules Section -->
<section class="featured-modules">
    <div class="module-header">
        <h2>Featured Learning Modules</h2>
        <p>Hand-picked modules to boost your cybersecurity knowledge</p>
    </div>
    
    <div class="module-grid">
        <% if (modules && modules.length > 0) { %>
            <% modules.slice(0, 3).forEach(module => { %>
                <div class="module-card">
                    <div class="module-content">
                        <h3><%= module.title %></h3>
                        <p><%= module.description %></p>
                        <div class="module-meta">
                            <span><i class="fas fa-signal"></i> <%= module.difficulty %></span>
                            <span><i class="far fa-clock"></i> <%= module.duration %> mins</span>
                        </div>
                        <button class="start-btn" onclick="startModule('<%= module.id %>')">Start Learning</button>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p class="no-modules">No modules available at the moment.</p>
        <% } %>
    </div>
</section>

<script>
    function startModule(moduleId) {
        window.location.href = `/modules/${moduleId}`;
    }
</script>