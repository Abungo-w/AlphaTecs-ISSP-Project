<div class="auth-container">
    <div class="form-wrapper">
        <h1>Register</h1>
        <form id="register-form" action="/register" method="POST">
            <label for="reg-username">Name</label>
            <input type="text" id="reg-username" name="name" required>
            
            <label for="reg-email">Email</label>
            <input type="email" id="reg-email" name="email" required>

            <label for="reg-password">Password</label>
            <input type="password" id="reg-password" name="password" required>
            
            <label for="reg-password">Job Title</label>
            <input type="text" id="reg-password" name="jobtitle" required>

            <label for="reg-password">Industry/Field</label>
            <input type="text" id="reg-password" name="jobfield" required>

            <label for="reg-password">Experience</label>
            <input type="text" id="reg-password" name="experience" required>
            
            <button type="submit">Register</button>
            <p>Already have an account? <a href="/login">Login</a></p>
        </form>
    </div>
</div>