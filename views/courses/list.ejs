<!DOCTYPE html>
<html>
<head>
    <title>Available Courses</title>
    <link rel="stylesheet" href="/css/courses.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="course-list-container">
        <div class="course-list-header">
            <h1>Available Courses</h1>
            <% if (user && user.role === 'admin') { %>
                <a href="/courses/create_course" class="btn-create">
                    <i class="fas fa-plus"></i>
                    Create New Course
                </a>
            <% } %>
        </div>

        <% if (messages.success) { %>
            <div class="alert alert-success">
                <%= messages.success %>
            </div>
        <% } %>

        <div class="course-grid">
            <% if (courses && courses.length > 0) { %>
                <% courses.forEach(course => { %>
                    <div class="course-card" data-course-code="<%= course.courseCode %>">
                        <div class="course-header">
                            <div class="course-meta">
                                <span class="course-code"><%= course.courseCode %></span>
                                <span class="course-date">
                                    <i class="far fa-calendar-alt"></i>
                                    <%= new Date(course.createdAt).toLocaleDateString() %>
                                </span>
                            </div>
                            <h2 class="course-title"><%= course.title %></h2>
                        </div>
                        
                        <div class="course-content">
                            <div class="course-modules">
                                <i class="fas fa-book-reader"></i>
                                <%= course.modules ? course.modules.length : 0 %> Modules
                            </div>
                            <div class="course-actions">
                                <a href="/courses/<%= course.courseCode %>" class="btn-view">
                                    <i class="fas fa-eye"></i>
                                    View Course
                                </a>
                                <% if (user && user.role === 'admin') { %>
                                    <a href="/courses/<%= course.courseCode %>/edit" class="btn-edit">
                                        <i class="fas fa-edit"></i>
                                        Edit
                                    </a>
                                    <button onclick="showDeleteModal('course', '<%= course.courseCode %>')" class="btn-delete">
                                        <i class="fas fa-trash-alt"></i>
                                        Delete
                                    </button>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="no-courses">
                    <i class="fas fa-graduation-cap"></i>
                    <p>No courses available yet.</p>
                    <% if (user && user.role === 'admin') { %>
                        <a href="/courses/create_course" class="btn-create">Create your first course</a>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
    
    <!-- Delete Confirmation Modal -->
    <div id="deleteModal" class="delete-modal">
        <div class="delete-modal-content">
            <div class="delete-modal-header">
                <h2>Confirm Delete</h2>
            </div>
            <div class="delete-modal-body">
                <p id="deleteModalText"></p>
            </div>
            <div class="delete-modal-footer">
                <button onclick="closeDeleteModal()" class="delete-modal-btn delete-modal-cancel">Cancel</button>
                <button onclick="confirmDelete()" class="delete-modal-btn delete-modal-confirm">Delete</button>
            </div>
        </div>
    </div>
    
    <script>
        const isAdmin = <%= user && user.role === 'admin' ? 'true' : 'false' %>;
    </script>
    <link rel="stylesheet" href="/css/modal.css">
    <script src="/js/delete_confirmation.js"></script>
</body>
</html>
